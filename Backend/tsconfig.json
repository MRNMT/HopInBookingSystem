{
  "compilerOptions": {
    /* Language */
    "target": "es2016",

    /* Module Type */
    "module": "commonjs",

    /* Allow ANY folders (src, common, middleware, api, etc.) */
    "rootDir": "src",
    "outDir": "dist",

    /* Allow default import (import express from 'express') */
    "esModuleInterop": true,

    /* Safety and strictness */
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Load types */
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },

  /* Only compile TypeScript files in src */
  "include": ["src/**/*"],

  /* Exclude node_modules */
  "exclude": ["node_modules"]
}

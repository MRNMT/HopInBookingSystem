# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Replace with your local or hosted PostgreSQL connection string
# Format: postgresql://[USER]:[PASSWORD]@[HOST]:[PORT]/[DB_NAME]
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/hopin_db"

# Security
# Generate a strong random string for JWT signing
JWT_SECRET="development_secret_key_change_in_production"

# Frontend Configuration
# URL where the frontend application is running (for CORS and redirects)
FRONTEND_URL="http://localhost:3000"

# Optional: Stripe Configuration (if testing payments)
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."

# Optional: Google OAuth (if testing social login)
# GOOGLE_CLIENT_ID="your_google_client_id"
# GOOGLE_CLIENT_SECRET="your_google_client_secret"
